  margin: 20rpx;
  padding: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.icon {
