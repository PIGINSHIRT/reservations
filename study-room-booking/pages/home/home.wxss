.page {
  background: linear-gradient(to bottom, #e0e7ff 0%, #f5f5f5 400rpx);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.welcome-section {
  background: white;
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.logo-area {
  display: flex;
  align-items: center;
}

.mascot {
  font-size: 120rpx;
  margin-right: 30rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.phone {
  color: #3b82f6;
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.wechat {
  color: #666;
  font-size: 24rpx;
}

.info-card {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.info-text {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.highlight {
  color: #3b82f6;
  font-weight: bold;
}

.function-buttons {
  display: flex;
  justify-content: space-between;
  margin: 20rpx;
  gap: 20rpx;
}

.func-btn {
  flex: 1;
  background: white;
  padding: 40rpx 20rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.func-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.func-text {
  font-size: 24rpx;
  font-weight: bold;
}

.booking-card {
  background: white;
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.search-tip {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.search-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.booking-title {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.booking-type {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.type-btn {
  flex: 1;
  padding: 25rpx;
  text-align: center;
  border-radius: 15rpx;
  background: #f0f0f0;
  font-weight: bold;
}

.type-btn.active {
  background: #3b82f6;
  color: white;
}

.date-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.date-sep {
  color: #ccc;
}

.duration-buttons {
  display: flex;
  gap: 15rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.duration-btn {
  flex: 1;
  min-width: 120rpx;
  padding: 25rpx 10rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-weight: bold;
}

.duration-btn.selected {
  border-color: #3b82f6;
  background: #eff6ff;
  color: #3b82f6;
}

.booking-btn {
  width: 100%;
  background: #10b981;
  color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.area-intro {
  background: white;
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.area-title {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.area-subtitle {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #666;
}

.area-images {
  display: flex;
  gap: 20rpx;
}

.area-img {
  flex: 1;
  height: 300rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}
