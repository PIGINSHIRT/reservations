  align-items: center;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.search-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.booking-title {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.booking-type {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.type-btn {
  flex: 1;
  padding: 25rpx;
  text-align: center;
  border-radius: 15rpx;
  background: #f0f0f0;
  font-weight: bold;
}

.type-btn.active {
  background: #3b82f6;
  color: white;
}

.date-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.date-sep {
  color: #ccc;
}

.duration-buttons {
  display: flex;
  gap: 15rpx;
  margin-bottom: 40rpx;
  flex-wrap: wrap;
}

.duration-btn {
  flex: 1;
  min-width: 120rpx;
  padding: 25rpx 10rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  font-weight: bold;
}

.duration-btn.selected {
  border-color: #3b82f6;
  background: #eff6ff;
  color: #3b82f6;
}

.booking-btn {
  width: 100%;
  background: #10b981;
  color: white;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.area-intro {
  background: white;
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.area-title {
  display: block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.area-subtitle {
  display: block;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #666;
}

.area-images {
  display: flex;
  gap: 20rpx;
}

.area-img {
  flex: 1;
  height: 300rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

/* 日期显示区优化 */
.date-selector {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f5f7fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
}
.date-box { display: flex; flex-direction: column; align-items: center; }
.date-label { font-size: 24rpx; color: #999; margin-bottom: 6rpx; }
.date-value { font-size: 32rpx; color: #333; font-weight: bold; }
.date-sep { color: #ccc; font-weight: bold; }

/* === 日历弹窗样式 === */
.calendar-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 999;
}
.modal-mask {
  width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
}
.calendar-box {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  min-height: 600rpx;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.cal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.cal-title { font-size: 34rpx; font-weight: bold; }
.cal-month-switch { padding: 10rpx 30rpx; color: #666; font-size: 36rpx; }

.cal-weeks { display: flex; margin-bottom: 20rpx; border-bottom: 1px solid #eee; padding-bottom: 10rpx;}
.week-item { flex: 1; text-align: center; font-size: 28rpx; color: #999; }

.cal-grid { display: flex; flex-wrap: wrap; }
.day-item {
  width: 14.28%; /* 7等分 */
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

/* 状态样式 */
.day-item.disabled { color: #eee; }
.day-item.start-day, .day-item.end-day { background: #1890ff; color: #fff; }
.day-item.in-range { background: #e6f7ff; color: #1890ff; }

.cal-tips {
  text-align: center;
  margin-top: 30rpx;
  color: #666;
  font-size: 28rpx;
}