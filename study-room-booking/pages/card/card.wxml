<view class="page">
  <view class="banner">
    <text class="banner-text">Right Way</text>
    <view class="banner-tag">上岸 StudyOnline</view>
  </view>

  <view class="tabs">
    <view class="tab {{currentTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">
      按天定座卡
    </view>
    <view class="tab {{currentTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">
      按小时定座卡
    </view>
    <view class="tab {{currentTab === 2 ? 'active' : ''}}" bindtap="switchTab" data-index="2">
      新客体验卡
    </view>
  </view>

  <view class="cards-container">
    <view wx:if="{{productList.length === 0}}" style="text-align: center; color: #999; margin-top: 50rpx;">
      暂无此类套餐上架
    </view>

    <block wx:for="{{productList}}" wx:key="_id">
      <view class="card-item" bindtap="buyCard" data-item="{{item}}">
        <view class="card-title">{{item.name}}</view>
        <view class="card-info">
          <text>• 有效天数：{{item.days}} 天</text>
          <text>• 价格：{{item.price / 100}} 元</text> <text wx:if="{{item.desc}}">• 说明：{{item.desc}}</text>
        </view>
        <view class="card-price">
          <text class="price-label">抢购价：</text>
          <text class="price-value">{{item.price / 100}}元</text>
        </view>
      </view>
    </block>
  </view>
</view>