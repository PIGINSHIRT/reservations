<view class="page">
  <view class="banner">
    <text class="banner-text">Right Way</text>
    <view class="banner-tag">上岸 StudyOnline</view>
  </view>

  <view class="tabs">
    <view class="tab {{currentTab === 0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">
      按天定座卡
    </view>
    <view class="tab {{currentTab === 1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">
      按小时定座卡
    </view>
    <view class="tab {{currentTab === 2 ? 'active' : ''}}" bindtap="switchTab" data-index="2">
      新客体验卡
    </view>
  </view>

  <view class="cards-container">
    <!-- 单日卡 -->
    <view class="card-item">
      <view class="card-title">单日卡～（所有位置）</view>
      <view class="card-info">
        <text>• 可用时间：1天</text>
        <text>• 有效时间：365天</text>
        <text>• 连续消费：开卡连续使用</text>
        <text>• 卡券限制：营业时间内可用</text>
      </view>
      <view class="card-price">
        <text class="price-label">抢购价：</text>
        <text class="price-value">19.9元</text>
      </view>
    </view>

    <!-- 特价桌型卡 -->
    <view class="card-item">
      <view class="card-title">特价桌型v19和v14</view>
      <view class="card-info">
        <text>• 可用时间：30天</text>
        <text>• 有效时间：365天</text>
        <text>• 连续消费：开卡连续使用</text>
        <text>• 卡券限制：营业时间内可用</text>
      </view>
      <view class="card-price">
        <text class="price-label">抢购价：</text>
        <text class="price-value">199元</text>
      </view>
    </view>

    <!-- 99元7次卡 -->
    <view class="card-item">
      <view class="card-title">99元7次（所有位置可用）</view>
      <view class="card-info">
        <text>• 可用时间：7天</text>
        <text>• 有效时间：365天</text>
        <text>• 连续消费：可分次使用</text>
      </view>
      <view class="card-price">
        <text class="price-label">抢购价：</text>
        <text class="price-value">99元</text>
      </view>
    </view>
  </view>
</view>
