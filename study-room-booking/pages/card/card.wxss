.page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.banner {
  height: 400rpx;
  background: linear-gradient(135deg, #ffd4a3 0%, #c8a3ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.banner-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
}

.banner-tag {
  position: absolute;
  top: 30rpx;
  left: 0;
  background: #dc2626;
  color: white;
  padding: 15rpx 40rpx;
  border-radius: 0 50rpx 50rpx 0;
  font-weight: bold;
}

.tabs {
  display: flex;
  background: white;
  padding: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  border-bottom: 4rpx solid transparent;
}

.tab.active {
  color: #dc2626;
  border-bottom-color: #dc2626;
  font-weight: bold;
}

.cards-container {
  padding: 30rpx;
}

.card-item {
  background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  color: white;
  box-shadow: 0 8rpx 30rpx rgba(30, 58, 138, 0.3);
}

.card-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.card-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  font-size: 26rpx;
  margin-bottom: 30rpx;
}

.card-price {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 25rpx 40rpx;
}

.price-label {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}