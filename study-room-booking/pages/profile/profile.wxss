.page {
  min-height: 100vh;
  background: linear-gradient(to bottom right, #dbeafe, #e9d5ff);
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  padding: 60rpx 40rpx 40rpx;
  border-radius: 0 0 50rpx 50rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  margin-right: 30rpx;
}

.phone-number {
  font-size: 44rpx;
  font-weight: bold;
}

.welcome-msg {
  font-size: 32rpx;
}

.logo-section {
  background: white;
  margin: 30rpx;
  padding: 60rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.logo-mascot {
  font-size: 160rpx;
  margin-bottom: 20rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.logo-subtitle {
  color: #999;
  font-size: 28rpx;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin: 0 30rpx 30rpx;
}

.action-btn {
  flex: 1;
  background: white;
  padding: 50rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.action-text {
  font-weight: bold;
  font-size: 28rpx;
}

.orders-card {
  background: white;
  margin: 0 30rpx 30rpx;
  padding: 40rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.orders-header {
  display: flex;
  align-items: center;
}

.orders-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}

.orders-title {
  font-size: 36rpx;
  font-weight: bold;
}

.admin-entrance {
  text-align: center;
  margin-top: 60rpx;
  color: #999;
  font-size: 32rpx;
}